<%- include('partials/header', { title: 'Students List' }) %>
<nav class="breadcrumb">
    <a href="/">Home</a> &gt; Students List
</nav>
<div class="row">
    <div class="col-12">
        <h1>Students List</h1>
        <a href="/students/new" class="btn btn-primary mb-3">Add New Student</a>
        <table id="studentsTable" class="table table-striped mb-3">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Date of Birth</th>
                    <th class="no-sort">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach(function(student) { %>
                <tr>
                    <td><%= student.name %></td>
                    <td><%= new Date(student.dob).toLocaleDateString() %></td>
                    <td>
                        <a href="/view/<%= student._id %>" class="btn btn-info btn-sm">View</a>
                        <a href="/students/edit/<%= student._id %>" class="btn btn-warning btn-sm">Edit</a>
                        <a href="/students/delete/<%= student._id %>" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</div>
<%- include('partials/footer') %>
